---
import { actions } from "astro:actions";

const { prompt } = Astro.props;
const { slug } = Astro.params;
---

<form method="post" action={actions.nodePassword}>
  <fieldset>
    <span>{prompt}</span>
    <input type="hidden" name="node" value={slug} />
    <input type="text" placeholder="User" name="username" autocomplete="off" />
    <input
      type="password"
      placeholder="Password"
      name="password"
      autocomplete="off"
    />
    <button type="submit">Submit</button>
  </fieldset>
</form>
